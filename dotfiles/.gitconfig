[user]
	name = Arne Link
	email = mail@arne-link.de
[safe]
	directory = *
[branch]
	autoSetupRebase = always
[core]
  precomposeunicode = true
  editor = vim
	excludesfile = ~/.gitexclude
	preloadIndex = true
	autocrlf = input
	pager = delta
[interactive]
  diffFilter = delta --color-only
[color]
	diff = auto
	interactive = auto
	status = auto
	branch = auto
	ui = true
[merge]
	tool = vimdiff
	renormalize = true
[diff]
	tool = vimdiff
  algorithm = histogram
  colorMoved = plain
  mnemonicPrefix = true
  renames = true
	# Use blank lines as diff boundary to improve diffs
	compactionHeuristic = true
	submodule = log
[diff "org"]
	xfuncname = "^\\*+.*"
[diff "lisp"]
	xfuncname = "^\\([^ ]+ [^ ]+"
[rerere]
	# Track and remember conflict resolutions for replaying them, see
	# https://git-scm.com/blog/2010/03/08/rerere.html
	enabled = true
[format]
  pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset
[alias]
  sm-update = submodule update --remote
  sm-push = push --recurse-submodules=on-demand
  sm-track = "! git submodule foreach -q --recursive 'branch=\"$(git config -f $toplevel/.gitmodules submodule.$name.branch)\"; git checkout $branch'"
  ci = commit
  f = flow
  ff = flow feature
  ffo = flow feature checkout
  ffco = flow feature checkout
  ffs = flow feature start
  fff = flow feature finish
  fh = flow hotfix
  fhs = flow hotfix start
  fhf = flow hotfix finish
  fb = flow bugfix
  fbs = flow bugfix start
  fbf = flow bugfix finish
  co = checkout
  dc = diff --cached
  dh1 = diff HEAD~1
  amend = commit --amend
  aa = add --all
  ;h = !git head
  ;r = !git l -20
  ;ra = !git r --all
  pullff = pull --ff-only
  noff = merge --no-ff
  pr = pull --rebase
  ;hp = "!. ~/.githelpers && show_git_head"
  ;l = "!. ~/.githelpers && pretty_git_log"
  ;la = !git l --all= !git l -1
  div = divergence
  fa = fetch --all
  b = branch
  ds = diff --stat=160,120
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
[mergetool]
	keepBackup = true
[difftool]
	prompt = false
[remote]
	pushDefault = origin
[push]
	default = simple
	recurseSubmodules = check
  autoSetupRemote = true
  followTags = true
[fetch]
	# Always prune dead branches from remotes
  prune = true
  pruneTags = true
  all = true
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[submodule]
	# Fetch submodules in parallel, with a reasonable number of jobs
	fetchJobs = 0
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[status]
	short = true
	branch = true
	submodulesummary = 1
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
  meta       = yellow
  frag       = magenta bold
  commit     = yellow bold
  old        = red bold
  new        = green bold
  whitespace = red reverse
[log]
	date = format-local:"%Y-%m-%d %H:%M"
[credential "microsoft.visualstudio.com"]
	interactive = always
[pull]
  rebase = true
[checkout]
	defaultRemote = origin
[init]
	defaultBranch = main
[credential "https://github.com"]
	helper = 
	helper = !/home/linuxbrew/.linuxbrew/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/home/linuxbrew/.linuxbrew/bin/gh auth git-credential
